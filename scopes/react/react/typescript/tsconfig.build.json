{
  "compilerOptions": {
    "lib": [
      "es2019", "DOM", "ES6" ,"DOM.Iterable"
    ],
    "target": "es2015",
    "module": "es2020",
    "jsx": "react",
    "allowJs": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "react": [
        "./node_modules/@types/react",
        "../node_modules/@types/react"
      ]
    }
  },
  "exclude": [
    "dist"
  ]
}
